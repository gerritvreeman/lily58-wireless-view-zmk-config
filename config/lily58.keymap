        numpad_navigation_layer_right {
            display-name = "NumNav";
            bindings = <
&kp F1     &kp F2          &kp F3       &kp F4       &kp F5       &kp F6                     &kp F7     &kp F8         &kp F9       &kp F10         &kp F11    &kp F12
&trans     &kp LBKT        &kp N7       &kp N8       &kp N9       &kp RBKT                   &trans     &trans         &trans       &trans          &trans     &trans
